<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.dargoz.scaffold.arch.features.feedback.presentation.ui.FeedbackFragment"
        android:label="feedback_fragment"
        tools:layout="@layout/feedback_fragment" >
        <action
            android:id="@+id/action_feedbackFragment_to_feedbackHistoryFragment"
            app:destination="@id/feedbackHistoryFragment" />
        <action
            android:id="@+id/action_feedbackFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedbackHistoryFragment"
        android:name="com.dargoz.scaffold.arch.features.feedback.presentation.ui.FeedbackHistoryFragment"
        android:label="feedback_history_fragment"
        tools:layout="@layout/feedback_history_fragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dargoz.scaffold.arch.features.login.presentation.ui.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_aliceFragment"
            app:destination="@id/aliceFragment" />
        <action
            android:id="@+id/action_loginFragment_to_bobFragment"
            app:destination="@id/bobFragment" />
    </fragment>
    <fragment
        android:id="@+id/aliceFragment"
        android:name="com.dargoz.scaffold.arch.features.login.presentation.ui.AliceFragment"
        android:label="alice_fragment"
        tools:layout="@layout/alice_fragment" >
        <action
            android:id="@+id/action_aliceFragment_to_bobFragment"
            app:destination="@id/bobFragment" />
        <action
            android:id="@+id/action_back_alice"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/main_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/bobFragment"
        android:name="com.dargoz.scaffold.arch.features.login.presentation.ui.BobFragment"
        android:label="bob_fragment"
        tools:layout="@layout/bob_fragment">
        <action
            android:id="@+id/action_back_bob"
            app:destination="@id/aliceFragment"
            />

    </fragment>
</navigation>